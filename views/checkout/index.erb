<style>
	form ul li	{
		font-size: 1.2em; margin-left: 0.6em; color: #000000;
	}
</style>

<% if params[:product] == 'ceu' %>
	<script src="/js/checkoutceu.js"></script>
<% else %>
	<script src="/js/checkout.js"></script>
<% end %>


<div class="page-header">
	<h1 style="color: #063d4c; font-size: 2em;">
		Checkout
		&nbsp;
		<span style="color: #0671d8;"><%= @product_name %>
	</h1>
</div>

<form method="post" id="payment-form">

	<div class="row">
		<div class="span12">
			<%= erb :"checkout/products/#{params[:product]}", layout: false, locals: { user: @user } %>
		</div>
	</div>

	<div class="row">
		<div class="span6">
			<%= erb :'checkout/forms/account', layout: false, locals: { user: @user } %>
		</div>
		<div class="span6">
			<%= erb :'checkout/forms/credit_card', layout: false %>
		</div>
	</div>

	<div class="row">
		<div class="span12">
			<%= erb :'checkout/forms/summary', layout: false, locals: { user: @user } %>
		</div>
	</div>
	
</form>
<hr style="margin-top: -2em;" />
	<p class="pull-right" style="margin: 0 0 36px 0; padding: 0;"> 
		<img src="/img/letsencrypt-logo-horizontal.svg" style="width: 140px; margin-top: -10px;" />
	</p>


